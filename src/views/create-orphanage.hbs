<!DOCTYPE html>
<html lang="pt_BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adicionar um orfanato | Happy</title>

    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
      integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
      crossorigin=""
    />

    <link rel="icon" href="/images/logo-icon.png" />

    <!-- Importe dos arquivos CSS -->
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/animation.css" />
    <link rel="stylesheet" href="/css/paging-create-orphanage.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/map.css" />
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/buttons.css" />

    <script
      src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
      integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
      crossorigin=""
    ></script>

    <!-- Importe da fonte Nunito -->
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div id="pagingcreate-orphanage">
      <!-- Barra lateral -->
      <aside class="animate-right sidebar">
        <!-- Logo -->
        <img src="/images/map-marker.svg" alt="Happy" />

        <!-- Roda pé -->
        <footer>
          <!-- Botão de retorno -->
          <button onclick="history.back()">
            <img src="/images/arrow-back.svg" alt="Voltar" />
          </button>
        </footer>
      </aside>
      <main class="animate-appear with-sidebar">
        <form action="save-orphanage" method="post" onsubmit="validate(event)">
          <fieldset>
            <legend>Dados</legend>

            <div class="map-container">
              <div id="mapid"></div>
              <input type="hidden" name="lat">
              <input type="hidden" name="lng">
              <footer>
                <a href="#" id="select-point"
                  >Clique no mapa para adicionar a localização</a
                >
              </footer>
            </div>

            <!-- Agrupamento de dados -->
            <div class="input-block">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="name">Nome</label>
              <input id="name" name="name" required />
            </div>

            <!-- Agrupamento de dados -->
            <div class="input-block">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="about"
                >Sobre <span>Máximo de 300 caracteres</span></label
              >
              <textarea id="about" name="about" required></textarea>
            </div>

            <!-- Agrupamento de dados -->
            <div class="input-block">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="whatsapp">Número de WhatsApp</label>
              <input id="whatsapp" name="whatsapp" required />
            </div>

            <!-- Agrupamento de dados -->
            <div class="input-block images">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="images">Foto</label>

              <div class="images-upload" id="images">
                <div class="new-upload">
                  <input
                    name="images"
                    placeholder="Cole o link da imagem aqui"
                    required
                    type="url"
                  />
                  <span onclick="deleteField(event)">
                    <img
                      src="/images/remove-image.svg"
                      alt="Remover Foto"/>
                    </span>
                </div>
              </div>
              <button onclick="addFotoField()" type="button">
                <img src="/images/add-file.svg" alt="Nova Imagem" />
              </button>
            </div>
          </fieldset>

          <fieldset>
            <legend>Visitação</legend>

            <!-- Agrupamento de dados -->
            <div class="input-block">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="instructions">Intruções</label>
              <textarea
                id="instructions"
                name="instructions"
                required
              ></textarea>
            </div>

            <!-- Agrupamento de dados -->
            <div class="input-block">
              <!-- O id da tag <input> tem que ser o mesmo usado no "for" da tag <label> -->
              <label for="opening_hours">Horarios de Visita</label>
              <input id="opening_hours" name="opening_hours" required />
            </div>

            <div class="input-block">
              <label for="open_on_weekends">Atende fim de semana?</label>
              <input
                type="hidden"
                id="open_on_weekends"
                name="open_on_weekends"
                value="1"
              />

              <div class="button-select">
                <button
                data-value="1" 
                onclick="toggleSelect(event)" 
                type="button"
                class="active">Sim</button>
                <button
                data-value="0" 
                onclick="toggleSelect(event)" 
                type="button"
                >Não</button>
              </div>

              <button type="submit" class="primary-button">Confirmar</button>
            </div>
          </fieldset>
        </form>
      </main>
    </div>

    <script src="/scripts/paging-create-orphanage.js"></script>
  </body>
</html>
